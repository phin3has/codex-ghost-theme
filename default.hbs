<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{meta_title}}</title>

    <link rel="stylesheet" href="{{asset "css/screen.css"}}">

    {{!-- Google Fonts --}}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=EB+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Literata:ital,opsz,wght@0,7..72,400;0,7..72,500;0,7..72,600;1,7..72,400;1,7..72,500&family=Lora:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;1,400;1,500;1,600&family=Source+Serif+4:ital,opsz,wght@0,8..60,400;0,8..60,500;0,8..60,600;0,8..60,700;1,8..60,400;1,8..60,500&family=Spectral:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&display=swap" rel="stylesheet">

    {{!-- Theme Color Variables --}}
    <style>
        :root {
            --font-heading: '{{#if @custom.title_font}}{{@custom.title_font}}{{else}}Playfair Display{{/if}}', Georgia, 'Times New Roman', serif;
            --font-body: '{{#if @custom.body_font}}{{@custom.body_font}}{{else}}Source Serif 4{{/if}}', Georgia, 'Times New Roman', serif;
            --color-accent: {{#if @custom.accent_color}}{{@custom.accent_color}}{{else}}#9D8461{{/if}};
        }
    </style>

    {{ghost_head}}
</head>
<body class="{{body_class}}{{#match @custom.navigation_layout "Logo in the center"}} nav-center{{/match}}">

    {{!-- Paper Texture Overlay --}}
    <div class="texture-overlay" aria-hidden="true"></div>

    {{!-- Site Header --}}
    {{> header}}

    {{!-- Main Content --}}
    <main class="site-main">
        {{{body}}}
    </main>

    {{!-- Site Footer --}}
    {{> footer}}

    {{!-- Search API Configuration --}}
    {{#if @custom.content_api_key}}
        <script>
            window.ghost = {
                url: '{{@site.url}}',
                key: '{{@custom.content_api_key}}'
            };
        </script>
    {{/if}}

    <script src="{{asset "js/main.js"}}"></script>

    {{ghost_foot}}
</body>
</html>
