<footer class="site-footer">
    <div class="container">
        {{!-- Footer Top --}}
        <div class="footer-top">
            {{!-- Footer Brand --}}
            <div class="footer-brand">
                <div class="footer-logo-lockup">
                    {{#if @site.logo}}
                        <img src="{{@site.logo}}" alt="{{@site.title}}" class="footer-logo">
                    {{else}}
                        <svg class="footer-logo-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                            <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                            <path d="M12 6v7"/>
                            <path d="M8 9h8"/>
                        </svg>
                        <span class="footer-title">{{@site.title}}</span>
                    {{/if}}
                </div>
                {{#if @site.description}}
                    <p class="footer-description">{{@site.description}}</p>
                {{/if}}
            </div>

            {{!-- Pages Navigation (Primary) --}}
            {{#if @site.navigation}}
                <nav class="footer-nav footer-pages" aria-label="Pages">
                    <h4 class="footer-nav-title">Pages</h4>
                    <ul class="footer-nav-list">
                        {{#foreach @site.navigation}}
                            <li><a href="{{url}}">{{label}}</a></li>
                        {{/foreach}}
                    </ul>
                </nav>
            {{/if}}

            {{!-- Sections Navigation --}}
            {{#get "tags" limit="5" order="count.posts desc" include="count.posts" as |tags|}}
                {{#if tags}}
                    <nav class="footer-nav footer-sections" aria-label="Sections">
                        <h4 class="footer-nav-title">Sections</h4>
                        <ul class="footer-nav-list">
                            {{#foreach tags}}
                                <li><a href="{{url}}">{{name}}</a></li>
                            {{/foreach}}
                        </ul>
                    </nav>
                {{/if}}
            {{/get}}

            {{!-- Connect Navigation --}}
            {{#if @site.secondary_navigation}}
                <nav class="footer-nav footer-connect" aria-label="Connect">
                    <h4 class="footer-nav-title">Connect</h4>
                    <ul class="footer-nav-list">
                        {{#foreach @site.secondary_navigation}}
                            <li><a href="{{url}}">{{label}}</a></li>
                        {{/foreach}}
                    </ul>
                </nav>
            {{/if}}

            {{!-- Social Icons --}}
            {{#if @site.facebook}}
                <div class="footer-social-wrapper">
                    <h4 class="footer-nav-title">Follow</h4>
                    <div class="footer-social">
                        {{#if @site.facebook}}
                            <a href="{{facebook_url}}" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                            </a>
                        {{/if}}
                        {{#if @site.twitter}}
                            <a href="{{twitter_url}}" target="_blank" rel="noopener noreferrer" aria-label="X (Twitter)">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                            </a>
                        {{/if}}
                    </div>
                </div>
            {{else if @site.twitter}}
                <div class="footer-social-wrapper">
                    <h4 class="footer-nav-title">Follow</h4>
                    <div class="footer-social">
                        <a href="{{twitter_url}}" target="_blank" rel="noopener noreferrer" aria-label="X (Twitter)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                        </a>
                    </div>
                </div>
            {{/if}}
        </div>

        {{!-- Footer Bottom --}}
        <div class="footer-bottom">
            <p class="footer-copyright">
                &copy; {{date format="YYYY"}} {{@site.title}}. All rights reserved.
            </p>
            <nav class="footer-legal" aria-label="Legal">
                <a href="/privacy/">Privacy</a>
                <span class="footer-legal-separator" aria-hidden="true">|</span>
                <a href="/terms/">Terms</a>
                <span class="footer-legal-separator" aria-hidden="true">|</span>
                <a href="{{@site.url}}/rss/" aria-label="RSS Feed">RSS</a>
            </nav>
        </div>
    </div>
</footer>
